<div id="<%= dom_id shortening %>" class="card">
  <div class="card-body text-center">

    <h5 class="card-title mb-4 p-3 rounded bg-subtle">
      <%= link_to short_url(shortening), short_url(shortening), class: "text-dark text-decoration-none", target: "_blank" %>
    </h5>

    <div class="d-flex gap-2 justify-content-evenly">
      <p class="card-text">
        <strong>Url:</strong>
        <%= shortening.url %>
      </p>

      <p class="card-text">
        <strong>Visits:</strong>
        <%= shortening.visit_count %>
      </p>
      <p class="card-text">
        <strong>Created:</strong>
        <%= l(shortening.created_at) %>
      </p>
    </div>
  </div>

</div>
